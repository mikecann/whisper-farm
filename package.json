{
  "name": "whisper-farm",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start:worker": "bun run worker/main.ts",
    "docker:build": "docker build -t whisper-farm-worker -f Dockerfile .",
    "docker:run": "docker run -it -e FLY_MACHINE_ID=4d89de20a67918 --gpus all whisper-farm-worker",
    "docker:build-and-run": "bun docker:build && bun docker:run",
    "fly:deploy": "fly deploy",
    "dev:client": "vite",
    "dev:server": "convex dev",
    "dev:ts": "tsc --noEmit --watch",
    "dev": "concurrently -k -p \"[{name}]\" -n \"server,client,storybook\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:dev:server\" \"npm:dev:client\" \"npm:storybook\"",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "bun test:unit",
    "test:unit": "vitest --exclude \"**/*.integration.*\"",
    "test:integration": "bun test **/*.integration.test.ts",
    "test:once": "vitest run",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "convex": "^1.12.1",
    "convex-test": "^0.0.21",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.23",
    "install": "^0.13.0",
    "lucide-react": "^0.390.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "ts-pattern": "^5.1.2",
    "tsx": "^4.14.1",
    "type-route": "^1.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "1.5.0",
    "@edge-runtime/vm": "^3.2.0",
    "@storybook/addon-essentials": "^8.1.6",
    "@storybook/addon-interactions": "^8.1.6",
    "@storybook/addon-links": "^8.1.6",
    "@storybook/addon-onboarding": "^8.1.6",
    "@storybook/blocks": "^8.1.6",
    "@storybook/react": "^8.1.6",
    "@storybook/react-vite": "^8.1.6",
    "@storybook/test": "^8.1.6",
    "@types/bun": "^1.1.4",
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^0.8.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.6.2",
    "storybook": "^8.1.6",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.6.0"
  }
}
